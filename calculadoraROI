<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Calculadora de ROI</title>
</head>
<body>
    <div class="calculator">
        <label>Inversión Total ($):</label>
        <input type="number" id="inversion" placeholder="Introduce la inversión total" required>

        <label>Ingresos Generados ($):</label>
        <input type="number" id="ingresos" placeholder="Introduce los ingresos generados" required>

        <button onclick="calcularROI()">Calcular ROI</button>

        <div class="results">
            <p><strong>ROI:</strong> <span id="roi">0%</span></p>
        </div>
    </div>

    <script>
        function calcularROI() {
            const inversion = document.getElementById("inversion").value;
            const ingresos = document.getElementById("ingresos").value;

            if (!inversion || !ingresos) {
                alert("Por favor, completa todos los campos.");
                return;
            }

            const roi = ((ingresos - inversion) / inversion) * 100;
            document.getElementById("roi").innerText = roi.toFixed(2) + "%";
        }
    </script>
</body>
</html>
